<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <tapcart translate="label" module="tapcart_tag">
            <label>Tapcart</label>
            <sort_order>100</sort_order>
        </tapcart>
    </tabs>
    <sections>
        <tapcart_tag translate="label" module="tapcart_tag">
            <label>API Configuration</label>
            <tab>tapcart</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
 
            <groups>

				<hint>
					<frontend_model>tapcart_tag/adminhtml_system_config_fieldset_status</frontend_model>
					<sort_order>0</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
				</hint>

                <api_credentials translate="label" module="tapcart_tag">
                    <label>API Credentials</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
 
                    <fields>
                        <api_key translate="label">
                            <label>API-key: </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </api_key>
                        <username translate="label">
                            <label>Username: </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </username>
                        <password translate="label">
                            <label>Password: </label>
                            <frontend_type>password</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </password>
                        <store translate="label">
                            <label>Store: </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </store>
                    </fields>
                </api_credentials>
            </groups>
        </tapcart_tag>
    </sections>
</config>